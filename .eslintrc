

{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "semi": [2, 'always'],
        "no-console": 0,
        "prefer-const": 2,
        "no-var": 2,
        "prefer-template": 1,
        "prefer-arrow-callback": 1,
        "consistent-return": 1,
        "eqeqeq": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-unused-vars": 0,
        "keyword-spacing": 1
    },
    "ecmaFeatures": {
        "modules": true
    }
}